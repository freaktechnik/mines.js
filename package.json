{
  "name": "mines",
  "title": "Mines",
  "description": "Yet another Minesweeeper clone with custom boards and mine-flagging",
  "version": "2.0.0",
  "devDependencies": {
    "@freaktechnik/eslint-config-browser": "^6.0.0",
    "@freaktechnik/eslint-config-test": "^6.0.0",
    "@freaktechnik/eslint-config-webpack": "^5.1.3",
    "ava": "^0.24.0",
    "babel-loader": "^7.1.1",
    "babel-plugin-transform-runtime": "^6.22.0",
    "babel-preset-env": "^1.6.0",
    "babel-regenerator-runtime": "^6.5.0",
    "clean-webpack-plugin": "^0.1.17",
    "codecov": "^3.0.0",
    "css-loader": "^0.28.0",
    "dom-storage": "^2.0.2",
    "ejs-loader": "^0.3.0",
    "eslint": "^4.8.0",
    "extract-text-webpack-plugin": "^3.0.0",
    "file-loader": "^1.1.0",
    "git-prepush-hook": "^1.0.1",
    "html-loader": "^0.5.0",
    "html-webpack-plugin": "^2.30.1",
    "image-webpack-loader": "^4.0.0",
    "jsdom": "^11.0.0",
    "json-loader": "^0.5.7",
    "manifest-scope-loader": "^1.0.1",
    "mutationobserver-shim": "^0.3.2",
    "nyc": "^11.2.1",
    "offline-plugin": "^4.8.4",
    "properties-loader": "0.0.1",
    "style-loader": "^0.20.1",
    "stylelint": "^8.3.1",
    "stylelint-config-standard": "^18.0.0",
    "stylelint-no-unsupported-browser-features": "^2.0.0",
    "transifex-loader": "^4.0.0",
    "underscore": "^1.8.3",
    "web-app-manifest-loader": "^0.1.1",
    "webpack": "^3.6.0"
  },
  "homepage": "https://humanoids.be/mines",
  "repository": {
    "type": "git",
    "url": "git://github.com/freaktechnik/mines.js.git"
  },
  "author": {
    "name": "Martin Giger",
    "url": "https://humanoids.be"
  },
  "license": "MPL-2.0",
  "scripts": {
    "test": "npm run lint && nyc ava",
    "lint:js": "eslint src/ assets/ test/ --ext js,json",
    "lint:css": "stylelint assets/styles/*.css",
    "lint": "npm run lint:js && npm run lint:css",
    "build": "webpack --progress --config webpack.config.prod.js",
    "build-dev": "webpack --config webpack.config.js",
    "coverage": "nyc report --reporter=text-lcov > coverage.lcov && codecov"
  },
  "dependencies": {
    "hammerjs": "^2.0.8",
    "jquery": "^3.1.0",
    "material-design-icons": "^3.0.1",
    "materialize-css": "^0.100.1",
    "what-input": "^5.0.2"
  },
  "pre-push": [
    "lint"
  ],
  "ava": {
    "babel": "inherit",
    "require": [
      "babel-core/register",
      "babel-regenerator-runtime"
    ]
  },
  "babel": {
    "presets": [
      "@ava/stage-4"
    ],
    "plugins": [
      "transform-es2015-modules-commonjs",
      "transform-runtime"
    ]
  },
  "browserslist": [
    "> 5%",
    "Firefox ESR",
    "last 1 FirefoxAndroid versions",
    "not OperaMini all"
  ],
  "stylelint": {
    "extends": "stylelint-config-standard",
    "plugins": [
      "stylelint-no-unsupported-browser-features"
    ],
    "rules": {
      "indentation": 4,
      "color-named": "always-where-possible",
      "plugin/no-unsupported-browser-features": [
        true,
        {
          "severity": "warning",
          "ignore": [
            "css3-cursors"
          ]
        }
      ]
    }
  },
  "nyc": {
    "reporter": [
      "lcov",
      "text"
    ]
  }
}
