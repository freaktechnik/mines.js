  "version": "2.0.0",
  "devDependencies": {
    "ava": "^0.17.0",
    "babel-loader": "^6.2.8",
    "babel-preset-es2015": "^6.18.0",
    "clean-webpack-plugin": "^0.1.14",
    "codecov": "^1.0.1",
    "css-loader": "^0.26.0",
    "dom-storage": "^2.0.2",
    "ejs-loader": "^0.3.0",
    "eslint": "^3.11.0",
    "eslint-plugin-freaktechnik": "^2.0.0",
    "extract-text-webpack-plugin": "^1.0.1",
    "file-loader": "^0.9.0",
    "git-prepush-hook": "^1.0.1",
    "html-loader": "^0.4.3",
    "html-webpack-plugin": "^2.22.0",
    "image-webpack-loader": "^2.0.0",
    "jsdom": "^9.8.3",
    "json-loader": "^0.5.4",
    "manifest-scope-loader": "^1.0.1",
    "mutationobserver-shim": "^0.3.2",
    "nyc": "^10.0.0",
    "offline-plugin": "^3.4.2",
    "properties-loader": "0.0.1",
    "style-loader": "^0.13.1",
    "transifex-loader": "^3.1.3",
    "underscore": "^1.8.3",
    "web-app-manifest-loader": "^0.1.1",
    "webpack": "^1.13.3"
  },
  "homepage": "https://humanoids.be/mines",
  "repository": {
    "type": "git",
    "url": "git://github.com/freaktechnik/mines.js.git"
  },
  "author": {
    "name": "Martin Giger",
    "url": "https://humanoids.be"
  },
  "license": "MPL-2.0",
  "scripts": {
    "test": "npm run lint && nyc ava",
    "lint": "eslint src/ assets/ test/",
    "build": "webpack --progress --config webpack.config.prod.js",
    "build-dev": "webpack --config webpack.config.js",
    "coverage": "nyc report --reporter=text-lcov > coverage.lcov && codecov"
  },
  "dependencies": {
    "hammerjs": "^2.0.8",
    "jquery": "^3.1.0",
    "material-design-icons": "^3.0.1",
    "materialize-css": "^0.97.7",
    "what-input": "^4.0.0"
  },
  "pre-push": [
    "lint"
  ],
  "ava": {
    "babel": "inherit",
    "require": "babel-register"
  },
  "babel": {
    "presets": [
      "es2015",
      "stage-2"
    ],
    "plugins": [
      "transform-es2015-modules-commonjs",
      "transform-runtime"
    ]
  }
