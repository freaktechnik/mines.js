  "devDependencies": {
    "ava": "^0.18.0",
    "babel-loader": "^6.2.9",
    "babel-preset-es2015": "^6.22.0",
    "clean-webpack-plugin": "^0.1.15",
    "codecov": "^1.0.1",
    "css-loader": "^0.26.1",
    "dom-storage": "^2.0.2",
    "ejs-loader": "^0.3.0",
    "eslint": "^3.14.0",
    "eslint-plugin-freaktechnik": "^2.0.0",
    "extract-text-webpack-plugin": "^2.0.0-rc.2",
    "file-loader": "^0.10.0",
    "git-prepush-hook": "^1.0.1",
    "html-loader": "^0.4.3",
    "html-webpack-plugin": "^2.26.0",
    "image-webpack-loader": "^3.1.0",
    "jsdom": "^9.9.1",
    "json-loader": "^0.5.4",
    "manifest-scope-loader": "^1.0.1",
    "mutationobserver-shim": "^0.3.2",
    "nyc": "^10.1.0",
    "offline-plugin": "^4.5.5",
    "properties-loader": "0.0.1",
    "style-loader": "^0.13.1",
    "transifex-loader": "^3.1.3",
